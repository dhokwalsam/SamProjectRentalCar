@{
    ViewBag.Title = "Create";
}

<h2>Create</h2>

<form action="" method="post" onsubmit="return XOnSubmit();">
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <h4>Add Hours</h4>
        <hr />
        <div class="form-group">
            <label for="Date" class="control-label col-md-2">Date</label>
            <div class="col-md-10">
                <input type="text" id="Date" name="Date" value="@Model.Date" onblur="XDisplayDay();"  style="display: inline" />
                <input type="text" id="txtDayOfWeek" maxlength="4" style="width:4em;display:inline" readonly />
            </div>
        </div>

        <div class="form-group">
            <label for="Category" class="control-label col-md-2">Category</label>
            <div class="col-md-10">
                @Html.DropDownList("CategoryId", null, htmlAttributes: new { @class = "form-control" })
            </div>
        </div>

        <input type="hidden" id="ProjectMemberId" name="ProjectMemberId" value="@Session["ProjectMemberId"]" />

        <div class="form-group">
            <label for="txtTime1" class="control-label col-md-2">Time1</label>
            <div class="col-md-10">
                <input type="hidden" id="Time1" name="Time1" value="@Model.Time1" />
                <input type="text" id="txtTime1" value="" style="display:inline" onChange="isDataChanged=true;" />
                &nbsp;<input type="button" value="±" id="btnTime1" onclick="XDatePlusMinus(1);" />

                &nbsp;<select name="ddlHours1" id="ddlHours1">
                    <option value="00">00</option>
                    <option value="01">01</option>
                    <option value="02">02</option>
                    <option value="03">03</option>
                    <option value="04">04</option>
                    <option value="05">05</option>
                    <option value="06">06</option>
                    <option value="07">07</option>
                    <option value="08">08</option>
                    <option value="09">09</option>
                    <option value="10">10</option>
                    <option value="11">11</option>
                    <option value="12">12</option>
                    <option value="13">13</option>
                    <option value="14">14</option>
                    <option value="15">15</option>
                    <option value="16">16</option>
                    <option value="17">17</option>
                    <option value="18">18</option>
                    <option value="19">19</option>
                    <option value="20">20</option>
                    <option value="21">21</option>
                    <option value="22">22</option>
                    <option value="23">23</option>
                </select>
                &nbsp;
                <select name="ddlMinutes1" id="ddlMinutes1">
                    <option value="00">00</option>
                    <option value="15">15</option>
                    <option value="30">30</option>
                    <option value="45">45</option>
                </select>

                <input type="button" id="now1" onclick="XNow(1)" value="Now" />
            </div>
        </div>

        <div class="form-group">
            <label for="txtTime2" class="control-label col-md-2">Time2</label>
            <div class="col-md-10">
                <input type="hidden" id="Time2" name="Time2" value="@Model.Time2" />
                <input type="text" id="txtTime2" value="" style="display:inline" onChange="isDataChanged=true;" />
                &nbsp;<input type="button" value="±" id="btnTime2" onclick="XDatePlusMinus(2);" />

                &nbsp;<select name="ddlHours2" id="ddlHours2">
                    <option value="00">00</option>
                    <option value="01">01</option>
                    <option value="02">02</option>
                    <option value="03">03</option>
                    <option value="04">04</option>
                    <option value="05">05</option>
                    <option value="06">06</option>
                    <option value="07">07</option>
                    <option value="08">08</option>
                    <option value="09">09</option>
                    <option value="10">10</option>
                    <option value="11">11</option>
                    <option value="12">12</option>
                    <option value="13">13</option>
                    <option value="14">14</option>
                    <option value="15">15</option>
                    <option value="16">16</option>
                    <option value="17">17</option>
                    <option value="18">18</option>
                    <option value="19">19</option>
                    <option value="20">20</option>
                    <option value="21">21</option>
                    <option value="22">22</option>
                    <option value="23">23</option>
                </select>
                &nbsp;
                <select name="ddlMinutes2" id="ddlMinutes2">
                    <option value="00">00</option>
                    <option value="15">15</option>
                    <option value="30">30</option>
                    <option value="45">45</option>
                </select>

                <input type="button" id="now2" onclick="XNow(2)" value="Now" />
            </div>
        </div>

        <div class="form-group">
            <label for="Notes" class="control-label col-md-2">Notes</label>
            <div class="col-md-10">
                <input type="hidden" id="Notes" name="Notes" value="" />
                <textarea id="XNotes" class="form-control" cols="80" rows="6">@Model.Notes</textarea>
            </div>
        </div>

        @Html.Hidden("Charge")

        @Html.Hidden("XDateTime")

        @Html.Hidden("Status")


        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Create" class="btn btn-default" />
            </div>
        </div>
    </div>

</form>

<div>
    <a href="~/Diaries/Index">Back to List</a>
</div>

